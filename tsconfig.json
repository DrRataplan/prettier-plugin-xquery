{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"noImplicitAny": true,
		"rewriteRelativeImportExtensions": true,
		"erasableSyntaxOnly": true,
		"verbatimModuleSyntax": true,
		"baseUrl": "./src/main.ts",
		"outDir": "dist",
		"allowImportingTsExtensions": true,
		"declaration": true
	},
	"include": [
		"src/*"
	]
}
